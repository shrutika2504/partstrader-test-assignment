{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["esnext"],
    "strict": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "types": ["node", "playwright"]
  },
  "include": [
    "tests",
    "env",
    "utils",
    "playwright.config.ts",
    "global-setup.ts",
    "global-teardown.ts"
  ],
  "exclude": ["dist", "node_modules"]
}
